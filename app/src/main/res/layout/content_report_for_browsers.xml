<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ReportForBrowsersActivity">

    <include
        layout="@layout/app_toolbar_layout"
        android:id="@+id/report_page_forBrowsers_toolbar"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>

    <ScrollView
        android:layout_below="@+id/registration_page_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Name : "
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false" />

                <EditText
                    android:id="@+id/reportBrowser_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textAlignment="textStart"/>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Phone : "
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false" />

                <EditText
                    android:id="@+id/reportBrowser_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|number"
                    android:maxLines="1"
                    android:textAllCaps="false"
                    android:textColor="@color/regTextColor"
                    android:textSize="18sp"
                    android:textAlignment="textStart"/>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Email : "
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false" />

                <EditText
                    android:id="@+id/reportBrowser_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textAllCaps="false"
                    android:hint="(Optional)"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Topic : "
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false" />

                <EditText
                    android:id="@+id/reportBrowser_topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Description : "
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false" />

                <EditText
                    android:id="@+id/reportBrowser_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"></View>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/reportBrowser_submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style_white"
            android:text="Submit"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:padding="16dp"
            android:textSize="18sp"/>

    </LinearLayout>

</LinearLayout>