<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EditProfileAdminActivity">

    <!--<include
        layout="@layout/app_toolbar_layout"
        android:id="@+id/editProfileAdmin_page_toolbar"></include>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/grad_profile">

        <View
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="70dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/editProfileAdmin_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:hint="Name"
                android:inputType="text"
                android:maxLines="1"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/regTextColor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editProfileAdmin_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textAlignment="textStart"
                android:textColor="@color/regTextColor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editProfileAdmin_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:hint="Phone"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textColor="@color/regTextColor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editProfileAdmin_bvcNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:hint="BVC Registration Number"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textColor="@color/regTextColor"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:editable="false"
                    android:linksClickable="false"
                    android:longClickable="false"
                    android:text="University :"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/editProfileAdmin_university_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:entries="@array/university" />

            </LinearLayout>

            <EditText
                android:id="@+id/editProfileAdmin_postingArea"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:hint="Posting Area"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textColor="@color/regTextColor"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:editable="false"
                    android:linksClickable="false"
                    android:longClickable="false"
                    android:text="District :"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/editProfileAdmin_district_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:entries="@array/district" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:editable="false"
                    android:linksClickable="false"
                    android:longClickable="false"
                    android:text="Division :"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/editProfileAdmin_division_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:entries="@array/division" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/editProfileAdmin_changeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_style_white"
        android:text="Change"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"/>

</LinearLayout>